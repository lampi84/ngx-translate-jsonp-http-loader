    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
